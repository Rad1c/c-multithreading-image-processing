<Window x:Class="prsv02.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="300" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None" MinHeight="300" MinWidth="300" MaxWidth="300" MaxHeight="300" ResizeMode="NoResize">
    <Border Padding="5" BorderBrush="#717071" BorderThickness="0.5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
            <TextBox Name="txtDescription" TextAlignment="Justify" Padding="15" FontFamily="Consolas" FontSize="14" Grid.Row="2" BorderThickness="0" />
        <Separator Grid.Row="1" Height="2"  Name="separator1" Margin="10,0,10,0"/>
        <Button Content="OK" Margin="0,0,10,10" Grid.Row="3" Height="23" HorizontalAlignment="Right" Name="btnOK"  Width="65" Click="btnOK_Click" />
        <Label Content="Simple Photo Editor" FontFamily="Calibri" FontSize="22" FontWeight="Bold" Name="lblTitle" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF3D4FB7"/>
    </Grid>
    </Border>
</Window>
